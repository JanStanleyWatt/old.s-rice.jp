---
import { getArticles } from "../../lib/microcms.ts";

const response = await getArticles({ fields: ["id", "title"] });
---

<div>
    <h1>Welcome to Astro.</h1>
    <ul>
        {
            response.contents.map((article) => (
                <li>
                    <a href={"/article/" + article.id}>{article.title}</a>
                </li>
            ))
        }
    </ul>
</div>
